{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@guardrail/core": ["packages/core/src/index.ts"],
      "@guardrail/evm": ["packages/evm/src/index.ts"],
      "@guardrail/actions": ["packages/actions/src/index.ts"],
      "@guardrail/ui-react": ["packages/ui-react/src/index.ts"]
    }
  }
}
